<header class="text-slate-100 container mx-auto">
    <div class="text-right mx-auto pt-6 pr-7 lg:hidden fixed right-0 z-50">
        <button type="submit" class="inline-block w-12 cursor-pointer" onclick="handlerMenu()">
            <svg class="text-slate-100 hover:scale-110 transition-transform ease-in" xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
        </button>
    </div>

    <div class="hidden lg:container lg:mx-auto fixed top-0 left-0 right-0 bottom-0 z-20 bg-indigo-600 lg:static lg:bg-transparent lg:flex lg:flex-row lg:p-5 p-8 items-center"
        id="menu">
        <div class="w-4/12">
            <a class="flex font-medium items-center text-slate-100 mb-4">
                <svg class="hidden lg:block w-10 h-10 text-white p-2 bg-indigo-500 rounded-full"
                    xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="lg:ml-3 text-xl font-bold"><%= user %></span>
            </a>
        </div>
        <div class="w-4/12 mt-8 lg:mt-0">
            <nav class="flex flex-col lg:flex-row items-start lg:items-center text-lg justify-between cursor-pointer">
                <a href="/" class="transition hover:text-slate-800 lg:hover:text-blue-500 my-4 lg:my-0">Home</a>
                <a href="/about" class="transition hover:text-slate-800 lg:hover:text-blue-500 my-4 lg:my-0">About</a>
                <a href="/employee"
                    class="transition hover:text-slate-800 lg:hover:text-blue-500 my-4 lg:my-0">Employee</a>
                <a href="/team" class="transition hover:text-slate-800 lg:hover:text-blue-500 my-4 lg:my-0">Team</a>
                <a href="/contact"
                    class="transition hover:text-slate-800 lg:hover:text-blue-500 my-4 lg:my-0">Contact</a>
            </nav>
        </div>
        <div class="w-4/12 lg:text-right mt-6 lg:mt-0">
            <form action="/logout" method="get">
                <button type="submit"
                    class="inline-flex font-semibold items-center text-slate-100 py-2 px-6 focus:outline-none bg-slate-800 hover:bg-slate-700 lg:bg-indigo-500 border-0 lg:hover:bg-indigo-600 rounded text-base uppercase transition ease-in">
                    Logout
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                        stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </button>
            </form>
        </div>
    </div>
</header>

<script>
    function handlerMenu() {
        const menu = document.getElementById('menu');
        if (menu) {
            return menu.classList.toggle('hidden');
        }

        return;
    }
</script>