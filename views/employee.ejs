<div class="container mx-auto pt-24 px-5">
    <h1 class="uppercase text-center tracking-wide text-slate-100 text-3xl lg:text-4xl font-semibold">Data
        Employee
    </h1>
    <hr class="w-2/5 lg:w-1/5 text-center mx-auto border border-indigo-700 mt-2">

    <div class="container pt-24 mx-auto text-slate-100">
        <div class="flex flex-wrap -m-4 text-center">
            <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
                <div class="border-2 border-slate-800 px-4 py-6 rounded-lg">
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                        stroke-width="2" class="text-indigo-400 w-12 h-12 mb-3 inline-block" viewBox="0 0 24 24">
                        <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 00-3-3.87m-4-12a4 4 0 010 7.75"></path>
                    </svg>
                    <h2 class="title-font font-semibold text-3xl text-white"><%= employee.length %> </h2>
                    <p class="leading-relaxed">Employee</p>
                </div>
            </div>
            <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
                <div class="border-2 border-slate-800 px-4 py-6 rounded-lg">
                    <svg class="text-indigo-400 w-12 h-12 mb-3 inline-block" xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                    <h2 class="title-font font-semibold text-3xl text-white"><%= active %></h2>
                    <p class="leading-relaxed">Active</p>
                </div>
            </div>
            <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
                <div class="border-2 border-slate-800 px-4 py-6 rounded-lg">
                    <svg class="text-indigo-400 w-12 h-12 mb-3 inline-block" xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h2 class="title-font font-semibold text-3xl text-white"><%= inactive %></h2>
                    <p class="leading-relaxed">Inactive</p>
                </div>
            </div>
            <div class="p-4 md:w-1/4 sm:w-1/2 w-full">
                <div class="border-2 border-slate-800 px-4 py-6 rounded-lg">
                    <svg class="text-indigo-400 w-12 h-12 mb-3 inline-block" xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h2 class="title-font font-semibold text-3xl text-white"><%= suspended%></h2>
                    <p class="leading-relaxed">Suspended</p>
                </div>
            </div>
        </div>
    </div>

    <a href="/addEmployee"
        class="inline-flex mt-14 mb-6 transition ease-in text-slate-100 bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Add
        Employee
    </a>

    <% if (msgAdd.length > 0) { %>
    <div class="bg-green-600 text-slate-100 rounded w-5/12 my-4 flex flex-row items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 ml-4 -mr-2" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        <span class="text-lg font-semibold capitalize p-3"><%= msgAdd %> </span>
    </div>
    <% } %>

    <% if (msgUpdate.length > 0) { %>
    <div class="bg-green-600 text-slate-100 rounded w-5/12 my-4 flex flex-row items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 ml-4 -mr-2" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        <span class="text-lg font-semibold capitalize p-3"><%= msgUpdate %> </span>
    </div>
    <% } %>

    <% if (msgDelete.length > 0) { %>
    <div class="bg-green-600 text-slate-100 rounded w-5/12 my-4 flex flex-row items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 ml-4 -mr-2" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        <span class="text-lg font-semibold capitalize p-3"><%= msgDelete %> </span>
    </div>
    <% } %>

    <% if (msgRegister.length > 0) { %>
    <div class="bg-green-600 text-slate-100 rounded w-5/12 my-4 flex flex-row items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 ml-4 -mr-2" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        <span class="text-lg font-semibold capitalize p-3"><%= msgRegister %> </span>
    </div>
    <% } %>

    <table class="w-full bg-slate-100 rounded-tr-xl rounded-tl-lg overflow-hidden">
        <thead class="bg-indigo-500 text-slate-100 text-lg">
            <tr class="border-slate-100 text-center">
                <th class="py-2 w-auto">No</th>
                <th class="py-2 w-auto">Fullname</th>
                <th class="py-2 w-auto">Nip</th>
                <th class="py-2 w-auto">Status</th>
                <th class="py-2 w-auto">Created at</th>
                <th class="py-2 w-auto">Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (employee.length === 0) { %>
            <tr>
                <td colspan="6">
                    <div class="text-red-600 w-5/12 my-4">
                        <span class="text-lg font-semibold capitalize p-3">Data Employee Masih kosong!</span>
                    </div>
                </td>
            </tr>
            <% } %>

            <% employee.map((data,index) => { %>
            <tr class="text-center text-base">
                <td class="py-4 text-base border-b border-indigo-600"><%= index + 1 %></td>
                <td class="py-4 text-base border-b border-indigo-600"><%= data.fullname %></td>
                <td class="py-4 text-base border-b border-indigo-600"><%= data.nip %></td>
                <td class="py-4 text-base border-b border-indigo-600">
                    <span class="relative inline-block px-3 py-1 font-semibold text-slate-100 leading-tight">
                        <% let status = '' %>
                        <% if (data.status === 'inactive') { %>
                        <% status = 'bg-red-600' %>
                        <% } else if(data.status === 'suspended') { %>
                        <% status = 'bg-yellow-600' %>
                        <% } else { %>
                        <% status = 'bg-green-600' %>
                        <% } %>

                        <span aria-hidden class="absolute inset-0 rounded-full <%= status %>"></span>
                        <span class="relative"><%= data.status %></span>
                    </span>
                </td>
                <td class="py-4 text-base border-b border-indigo-600">
                    <%= new Date(data.date).toLocaleDateString() %>
                </td>
                <td class="py-4 text-base border-b border-indigo-600">
                    <a href="/employee/<%= data.fullname %>"
                        class="inline-block font-semibold transition ease-in text-indigo-500 border-2 border-indigo-500 py-2 px-4 focus:outline-none hover:bg-indigo-600 hover:text-slate-100 rounded text-sm">View
                        Detail
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>